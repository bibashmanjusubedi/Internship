@model Internship.Models.AssetCategory

@{
    ViewData["Title"] = "Create New Asset Category";
}

<h2>Create New Asset Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CatID" class="control-label"></label>
        <input asp-for="CatID" class="form-control" />
        <span asp-validation-for="CatID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatName" class="control-label"></label>
        <input asp-for="CatName" class="form-control" />
        <span asp-validation-for="CatName" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Create Asset Category</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Asset Category</a>
</form>
