@model Internship.Models.AssetCategory

@{
    ViewData["Title"] = "Edit Category Name";
}

<h2>Edit Category Name</h2>

<form asp-action="PatchName" method="post">
    <input type="hidden" name="CatID" value="@Model.CatID" />

    <div class="form-group">
        <label for="CatName">Category Name</label>
        <input type="text" class="form-control" name="CatName" value="@Model.CatName" />
        <span asp-validation-for="CatName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Name</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
