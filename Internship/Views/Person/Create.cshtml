@model Internship.Models.Person

@{
    ViewData["Title"] = "Create New Person";
}

<h2>Create New Person</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PId" class="control-label"></label>
        <input asp-for="PId" class="form-control" />
        <span asp-validation-for="PId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginID" class="control-label"></label>
        <input asp-for="LoginID" class="form-control"/>
        <span asp-validation-for="LoginID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginStatus" class="control-label"></label>
        <textarea asp-for="LoginStatus" class="form-control"></textarea>
        <span asp-validation-for="LoginStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Remarks" class="control-label"></label>
        <input asp-for="Remarks" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Person</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Person List</a>
</form>
