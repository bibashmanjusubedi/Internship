@model Internship.Models.Person

<h2>Person Details</h2>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>PId</th>
            <td>@Model.PId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>LoginId</th>
            <td>@Model.LoginID</td>
        </tr>
        <tr>
            <th>LoginStatus</th>
            <th>@Model.LoginStatus</th>
        </tr>
        <tr>
            <th>Remarks</th>
            <th>@Model.Remarks</th>
        </tr>
    </table>
}
else
{
    <p>No person found with the given PId.</p>
}
