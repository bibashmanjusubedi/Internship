@model Internship.Models.Asset

<h2>Asset Details</h2>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>AssetId</th>
            <td>@Model.AssetId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>ShortName</th>
            <td>@Model.ShortName</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Unit</th>
            <td>@Model.Unit</td>
        </tr>
        <tr>
            <th>CatID</th>
            <th>@Model.CatID</th>
        </tr>
    </table>
}
else
{
    <p>No asset found with the given AssetId.</p>
}
