@model Internship.Models.AssetDetail

<h2>Delete Asset Detail</h2>

<h3>Are you sure you want to delete this record?</h3>

<div>
    <p><strong>SN:</strong> @Model.Sn</p>
    <p><strong>Asset ID:</strong> @Model.AssetId</p>
    <p><strong>Asset Code:</strong> @Model.AssetCode</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Purchase Date:</strong> @Model.PurchaseDate</p>
    <p><strong>Remark:</strong> @Model.Remark</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Sn" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
